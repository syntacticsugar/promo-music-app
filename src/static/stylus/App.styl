@require './global.styl'
@require './alphabetmenu.styl'
@require './songlist.styl'
@require './audioplayer.styl'

body
  margin 0
  padding 0
  font-family sans-serif
  background-color #e6e6e6

.container
  position relative
.App
  position relative
  text-align center
  //width 500px
  margin 0 auto
  //display inline-block

.App-logo
  animation App-logo-spin infinite 20s linear
  height 80px

.social-media
  text-align: center
  position absolute
  margin 0 auto
  z-index: 30
  right 15%
  top 5px
  ul
    list-style-type none
    margin 0
    padding 0
    li
      display inline
      margin-right 1em

.App-header
  position relative
  padding 0.2em
  margin 0 auto
  .logo
    width 48px
    height 33px
    background-attachment fixed
    background-position center
    margin 0 auto
    background url("../images/logo-48x33.png")
  .App-title
    color titleBlue
    text-transform uppercase
    font-size 1.3em
    font-weight 700
    font-family "open sans condensed"
  .slogan
    color sloganBlue
    font-family "meera Inimai"
    font-size 0.9em
    position relative
    top -0.8em

.App-intro
  font-size large

.drawer-wrapper
  //min-width 411px
  //max-width 25%
  padding-left 1.4rem
  padding-right 1rem
  padding-top 2rem
  font-family: drawerListFont
  .default-empty-songs
    color #89b7d0
    letter-spacing: 0.06em
  h4
    //color titleBlue
    color hsla(198, 73%, 52%, 1)
    color hsl(198, 68%, 80%)
    text-transform: uppercase;
    background-color: rgba(0,0,0,0.6)
    display: inline-block;
    padding 6px 7px 0 6px
    i.fas.fa-star, i.fa.fa-play
      color hsla(198, 73%, 42%, 1)
      margin-right 0.4em
      font-size 0.7em
      position relative
      top -2px
  ol
    color drawerListTextColor
    list-style-type: circle;
    margin-left -0.6em
    li
      margin 0
      position relative
      color hsla(201, 48%, 32%, 1)
      color hsla(201, 100%, 99%, 1)
      font-size 1.1em
      letter-spacing: 0.05em
      span.delete
        position relative
        padding 7px
        color darken(silver,4)
        font-size 0.9em
        &:hover
          cursor pointer
          color brightOceanBlue
          color hsla(198, 70%, 63%, 1)
        &:active
          color hsla(198, 70%, 43%, 1)
          bottom -1px


.drawer-backdrop-override
  background-color transparent !important
.drawer-override
  max-width 27%
  min-width 405px
  //background-color lighten(silver,25) !important
  background-color #29739a !important
.open-drawer
  i.fas.fa-star
    color alphabetLetter
    &:hover
      cursor pointer
      color brightOceanBlue
.scroll-up
  font-size 2em
  color darken(sloganBlue,10)
  &:hover
    color brightOceanBlue
.header-wrapper
  position relative
.star-button
  position absolute
  left 0
  top 0.2em
